<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<listener>
    	<listener-class>org.apache.myfaces.webapp.StartupServletContextListener</listener-class>
 	</listener>

	<listener>
		<display-name>StartupListener</display-name>
		<listener-class>openMMSA.listeners.StartupListener</listener-class>
	</listener>


  	 <filter>
		<filter-name>RunLocalFilter</filter-name>
		<filter-class>test.RunLocalFilter</filter-class>
		<init-param>
			<description>Set to enabled to run on desktop</description>
			<param-name>enabled</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>RunLocalFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>  
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>  

