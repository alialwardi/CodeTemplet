	<filter>
		<filter-name>MainFilter</filter-name>
		<filter-class>openMMSA.filters.MainFilter</filter-class>
		<init-param>
			<description>Set to true if we should insert Fiserv resize Javascript into response</description>
			<param-name>insertFiservResizeJavascript</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
 
 	<filter-mapping>
		<filter-name>MainFilter</filter-name>
		<url-pattern>/StartServlet</url-pattern>
		<url-pattern>/fail.xhtml</url-pattern>
		<url-pattern>/mmsa-unavailable.xhtml</url-pattern>
		<url-pattern>/not-member.xhtml</url-pattern>
		<url-pattern>/indexOpenSavingsAccounts.xhtml</url-pattern>
		<url-pattern>/indexOpenMMSAccounts.xhtml</url-pattern>
		<url-pattern>/success.xhtml</url-pattern>
		
		<url-pattern>/logout.xhtml</url-pattern>
		<dispatcher>REQUEST</dispatcher>  
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>


	<filter>
		<display-name>NoCacheFilter</display-name>
		<filter-name>NoCacheFilter</filter-name>
		<filter-classopenMMSA.filters.NoCacheFilter</filter-class>
	</filter>

 	<filter-mapping>
 		<filter-name>NoCacheFilter</filter-name>
 		<url-pattern>/indexOpenSavingsAccounts.xhtml</url-pattern>
 		<url-pattern>/indexOpenMMSAccounts.xhtml</url-pattern>
 		<url-pattern>/fail.xhtml</url-pattern>
 		<url-pattern>/mmsa-unavailable.xhtml</url-pattern>
 		<url-pattern>/success.xhtml</url-pattern>
 		<url-pattern>/not-member.xhtml</url-pattern>
 		<url-pattern>/logout.xhtml</url-pattern>
		<dispatcher>REQUEST</dispatcher>  
		<dispatcher>FORWARD</dispatcher>
 	</filter-mapping> 


	<servlet>
	    <servlet-name>FacesServlet</servlet-name>
	    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
	    <load-on-startup>1</load-on-startup>
	</servlet>

 	<servlet-mapping>
	    <servlet-name>FacesServlet</servlet-name>
	    <url-pattern>*.faces</url-pattern>
	    <url-pattern>/faces/*</url-pattern>
	    <url-pattern>*.jsf</url-pattern>
	    <url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>

	<context-param> 
	    <param-name>com.ibm.faces.portlet.RENDER_UNHANDLED_FACES_MESSAGES</param-name>
		<param-value>true</param-value>
	</context-param>

    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
 	</context-param>
	<context-param>
	    <param-name>javax.faces.PROJECT_STAGE</param-name>
	    <param-value>Production</param-value>
	</context-param>
   <context-param>
       <param-name>com.ibm.ws.jsf.LOAD_FACES_CONFIG_AT_STARTUP</param-name>
       <param-value>true</param-value>
   </context-param>
     <context-param>
    	<param-name>facelets.SKIP_COMMENTS</param-name>
    	<param-value>true</param-value>
	</context-param>
 
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>none</param-value>
	</context-param>
 
	
	<servlet>
		<description></description>
		<display-name>StartServlet</display-name>
		<servlet-name>StartServlet</servlet-name>
		<servlet-class>openMMSA.servlets.StartServlet</servlet-class>
		<load-on-startup>-1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>StartServlet</servlet-name>
		<url-pattern>/StartServlet</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>/StartServlet</welcome-file>
	</welcome-file-list>
 	
	<error-page>
    	<exception-type>javax.faces.application.ViewExpiredException</exception-type>
    	<location>/mmsa-unavailable.xhtml</location>
	</error-page>
	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/mmsa-unavailable.xhtml</location>
	</error-page>
	<error-page>
    	<error-code>500</error-code>
    	<location>/mmsa-unavailable.xhtml</location>
	</error-page>
	<error-page>
    	<error-code>404</error-code>
    	<location>/mmsa-unavailable.xhtml</location>
	</error-page>
	
	
</web-app>
